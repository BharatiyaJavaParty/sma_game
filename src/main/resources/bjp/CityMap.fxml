<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="bjp.controller.CityMapController">
    <VBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <!-- Scoreboard Pane with specified background color, height, and width -->
        <Pane fx:id="scoreBoardPane" style="-fx-background-color: pink;" minHeight="0" prefHeight="50" minWidth="200" prefWidth="200">
            <!-- Scoreboard content goes here -->
        </Pane>
        
        <!-- Main Game Area within a StackPane -->
        <StackPane fx:id="cityMainStack" alignment="CENTER">
            <GridPane fx:id="cityMapGrid" alignment="CENTER" hgap="0" vgap="0">
                <!-- Game grid/content goes here -->
            </GridPane>
        </StackPane>
    </VBox>
</AnchorPane>

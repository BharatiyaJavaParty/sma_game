<VBox alignment="CENTER" prefHeight="312.0" prefWidth="444.0" spacing="15" stylesheets="@../styles/player_name_dialog.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bjp.controller.PlayerNameController">
    <children>
        <Label contentDisplay="CENTER" styleClass="game-label" text="Enter Your Name:">
         <font>
            <Font size="20.0" />
         </font></Label>
        <TextField fx:id="textField" maxHeight="50.0" maxWidth="300.0" prefHeight="46.0" prefWidth="251.0" styleClass="game-text-field">
         <font>
            <Font size="23.0" />
         </font></TextField>
      <GridPane alignment="CENTER" maxWidth="250.0" prefHeight="197.0" prefWidth="228.0">
        <columnConstraints>
          <ColumnConstraints />
            <ColumnConstraints maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
            <RowConstraints />
        </rowConstraints>
         <children>
              <Button alignment="CENTER" contentDisplay="CENTER" minHeight="80.0" minWidth="200.0" onAction="#okButtonClicked" prefHeight="43.0" prefWidth="230.0" styleClass="game-button" text="OK" textAlignment="CENTER" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <font>
                  <Font size="29.0" />
               </font>
            </Button>
            <Button alignment="CENTER" contentDisplay="CENTER" minHeight="80.0" minWidth="200.0" onAction="#cancelButtonClicked" prefHeight="80.0" prefWidth="229.0" styleClass="game-button" text="BACK" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </children>
      </GridPane>
    </children>
</VBox>
